@import "../../../style/skin.wxss";

page {
	background-color: #f2f2f2;
}

.list {
	margin-top: 10rpx;
	width: 100%;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	flex-wrap: wrap;
	padding: 20rpx 20rpx;
}

.list .item {
	width: 100%;
	padding: 20rpx;
	display: flex;
	overflow: hidden;
	justify-content: center;
	border-radius: 10rpx;
	background-color: #fff;
	margin-bottom: 25rpx;
	border-top-right-radius: 30rpx;
	border-bottom-left-radius: 30rpx;
}

.list .item image {
	width: 240rpx;
	height: 170rpx;
	border-radius: 6rpx;
	border-top-right-radius: 20rpx;
	border-bottom-left-radius: 20rpx;
	position: relative;
	overflow: hidden;
}

.list .item image text {
	position: absolute;
	top: 0;
	left: 0;
	font-size: 22rpx;
	background-color: rgba(11, 64, 240, 0.7);
	color: #fff;
	padding: 2rpx 10rpx;
	border-bottom-right-radius: 10rpx;
	border-top-left-radius: 6rpx;
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	padding: 10rpx 10rpx;
	margin-left: 10rpx;
}

.list .item .right .title {
	width: 100%;
	text-align: left;
	color: #333;
	font-weight: bold;
	font-size: 28rpx;
}

.list .item .right .oprt {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.list .item .right .oprt .cnt {
	color: #999;
	font-size: 24rpx;
}

.list .item .right .oprt .bb {
	background-color: #f2f2f2;
	padding: 10rpx 20rpx;
	border-radius: 6rpx;
	font-size: 24rpx;
	border-top-right-radius: 20rpx;
	border-bottom-left-radius: 20rpx;
}

.shadow {
	box-shadow: 6rpx 9rpx 8rpx #eee;
}